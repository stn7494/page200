<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ez.en.page.onetoone_replyMapper">

	<select id="list2" resultType="Onetoone_replyDTO">
		<!-- 1 대 1 답변 전체 조회 -->
		select rp_code,o_code,id,f_code,rp_content,rp_depth,rp_w_date from
		page200.onetoone_reply
	</select>
	<select id="selectOne2" resultType="Onetoone_replyDTO"
		parameterType="String">
		<!-- 1 대 1 예약 답변 선택 조회 -->
		select rp_code,o_code,id,f_code,rp_content,rp_depth,rp_w_date FROM
		page200.onetoone_reply
		where
		rp_code=#{rp_code}
	</select>
	<insert id="insert2" parameterType="Onetoone_replyDTO">
		insert into
		page200.onetoone_reply (rp_code,o_code,id,rp_content,rp_w_date)
		value(#{rp_code},#{o_code},#{id},#{rp_content},now())
	</insert>
	<update id="update2" parameterType="Onetoone_replyDTO">
	update page200.onetoone_reply set 
	o_code = #{o_code},id=#{id},rp_content=#{rp_content},
	rp_w_date= now() where rp_code = #{rp_code} ;
	</update>
	<delete id="delete2" parameterType="Onetoone_replyDTO" >
	delete  from page200.onetoone_reply where rp_code =#{rp_code}; 
	</delete>
</mapper>
  

	